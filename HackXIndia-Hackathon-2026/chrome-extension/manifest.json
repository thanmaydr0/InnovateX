{
  "manifest_version": 3,
  "name": "SkillOS Career Intelligence",
  "version": "1.0.0",
  "description": "Scrapes real-time job skill demand into your SkillOS dashboard",
  "permissions": ["activeTab", "scripting", "storage", "tabs", "alarms"],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://internshala.com/*",
    "https://www.naukri.com/*",
    "https://unstop.com/*",
    "https://www.indeed.co.in/*"
  ],
  "background": { "service_worker": "background.js", "type": "module" },
  "content_scripts": [{
    "matches": [
      "https://www.linkedin.com/jobs/*",
      "https://internshala.com/*",
      "https://www.naukri.com/*",
      "https://unstop.com/*"
    ],
    "js": ["content.js"],
    "run_at": "document_idle"
  }],
  "action": { "default_popup": "popup.html" },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
